<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="cerisaiejpa">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.epul.metier.ActiviteEntity</class>
        <class>com.epul.metier.ClientEntity</class>
        <class>com.epul.metier.EmplacementEntity</class>
        <class>com.epul.metier.SejourEntity</class>
        <class>com.epul.metier.SportEntity</class>
        <class>com.epul.metier.TypeEmplacementEntity</class>

        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/cerisaie"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="userepul"/>
            <property name="hibernate.connection.password" value="epul"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hbm2ddl.auto" value="update"/>
            <property name="hibernate.max_fetch_depth" value="3"/>
        </properties>
    </persistence-unit>
</persistence>
